    <table class="table table-striped table-bordered">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>Start Date</th>
            <th>Job Title</th>
            <th>Salary</th>
        </tr>
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{department}}</td>
            <td>{{startDate}}</td>
            <td>{{jobTitle}}</td>
            <td>{{salary}}</td>
        </tr>
    </table>
    <input type="submit" value="Yes">
    </form>
    <form action="/view" method="GET">
    <input type="submit" value="No">
    
    </form>
    </div>

